.features {
  padding: 8rem 0;
  background: #f9fafb;
  position: relative;

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .section-title {
    text-align: center;
    margin-bottom: 5rem;

    h2 {
      font-size: 3rem;
      color: #1f2937;
      margin: 0 0 1rem 0;
      font-weight: 300;

      strong {
        font-weight: 700;
        color: #9c27b0;
      }
    }

    p {
      font-size: 1.1rem;
      color: #6b7280;
      margin: 0;
    }
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 3rem;
  }

  .feature-item {
    text-align: center;
    padding: 2rem;
    transition: transform 0.3s ease;

    &:hover {
      transform: translateY(-10px);

      .feature-icon {
        transform: scale(1.1);
        background: linear-gradient(135deg, #9c27b0 0%, #aa00ff 100%);
        box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
      }
    }

    .feature-icon {
      width: 80px;
      height: 80px;
      margin: 0 auto 1.5rem;
      background: linear-gradient(135deg, #aa00ff 0%, #9c27b0 100%);
      border-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(124, 58, 237, 0.2);

      svg {
        color: #fff;
      }
    }

    h3 {
      font-size: 1.5rem;
      color: #1f2937;
      margin: 0 0 1rem 0;
      font-weight: 600;
    }

    p {
      font-size: 1rem;
      color: #6b7280;
      line-height: 1.6;
      margin: 0;
    }
  }

  @media screen and (max-width: 968px) {
    padding: 6rem 0;

    .section-title {
      margin-bottom: 4rem;

      h2 {
        font-size: 2.5rem;
      }
    }

    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 2.5rem;
    }
  }

  @media screen and (max-width: 768px) {
    padding: 4rem 0;

    .section-title {
      margin-bottom: 3rem;

      h2 {
        font-size: 2rem;
      }

      p {
        font-size: 1rem;
      }
    }

    .feature-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .feature-item {
      padding: 1.5rem;
    }
  }
}
